<p id="notice"><%= notice %></p>

<h1>借りたい本を入力してください</h1>
<%= form_tag books_path, :method => 'get' do %> <%#　projects_pathはモデル名で読みかえること %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "検索", :books_name => nil %>
  </p>
<% end %>
<p></p>
<table>
  <thead>
    <tr>
      <th>一覧</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_name %></td>
        <td><%= link_to '詳細', book %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


